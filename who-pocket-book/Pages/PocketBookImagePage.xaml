<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="who_pocket_book.Pages.PocketBookImagePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
            <Label x:Name="TextLabel"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Image x:Name="ImageView" Aspect="AspectFit" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>